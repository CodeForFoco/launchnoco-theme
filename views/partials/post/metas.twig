<div class="d-flex mb-2 metas">
    {%  if 'date' in metas %}
        <div class="meta post-date">
            <i class="fa fa-clock-o" aria-hidden="true"></i>
            <span class="value">
            {{ post.date | date }}
        </span>
        </div>
    {%  endif %}

    {%  if 'author' in metas %}
    <div class="meta blog-author">
        <i class="fa fa-user" aria-hidden="true"></i>
        <a href="{{post.author.path}}">
            {{ post.author.name }}
        </a>
    </div>
    {% endif %}
</div>